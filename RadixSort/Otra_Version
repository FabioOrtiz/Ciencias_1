<html>
    <head>
        <title>Ordenamiento Radix</title>
        <script type="text/javascript">
            
        function Radix(){
        var b= document.getElementById("Result");
        var otra=document.getElementById("Result1");
        var c=document.getElementById("a");
        var a= c.value;
        arreglo= new Array(a);
        for(i=0;i<a ;i++){
           arreglo [i]=Math.round(Math.random()*1000);
        } multi=1;
        matriz=new Array(a);
        for (i = 0; i < 10; i++) {
            matriz[i]=new Array(a);
            matriz[i][0]=1;
        }
        
        multi=1;
        c=2;
        otra.innerHTML="Arreglo desordenado="+ arreglo;
        
      
         for(z=0;z<3;z++){
             c=c+3;
             for(i=0;i<a;i++){
                 c=c+19;
                 llave=arreglo[i]/multi;
                 ind1=llave%10;
                ind=parseInt(ind1); 
                 proximo=matriz[ind][0];
                 matriz[ind][proximo]=arreglo[i];
                 matriz[ind][0]++; 
         }c=c+1;
         j=0;
         c=c+2;
         for(i=0;i<10;i++){
             c=c+3;
             for(k=1;k< matriz[i][0];k++){
                c=c+9; 
                arreglo[j]=matriz[i][k];
                 j++;
             }
            
         }
         c=c+4;
         
          matriz=new Array(a);
        for (i = 0; i < 10; i++) {
            c=c+8;
            matriz[i]=new Array(a);
            matriz[i][0]=1;
        }  
        multi=multi*10;
        c=c+3;
     }
     var s=parseInt(a);
     f=3*((19*s)+30+(9*s)+80+13)+2;

        b.innerHTML= "Arreglo ordenado= "+arreglo+"\n"+" Contador="+c+"  Formula"+f;
    }
        </script>
    </head>
    <body>
       Tama√±o del arreglo <input type="text" id ="a">
        <input type="button" onclick="Radix()" value="organizar">
        <br><br>
        <div id="Result1"></div>
        <div id="Result"></div>
    </body>
