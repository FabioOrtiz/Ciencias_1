<html>
	<head>
	<style>
		table, td {
			border: 1px solid black;
		}
	</style>
	<script>
	var cantidad_datos_matriz= 0;
	var ancho = 0;
	var datos_matriz =[];
	var dato="";		
	var table = document.getElementById("Matriz");
	
	function crear_matriz()
	{
		var cantidad_datos=document.getElementById("dato");
		cantidad_datos_matriz= cantidad_datos.value;
		ancho = Math.pow(cantidad_datos_matriz, 0.5);
		var datos_matriz =[];
		var dato=0;
		
		table = document.getElementById("Matriz");
		
		for (var i=0;i<ancho;i++)
		{
			var row = table.insertRow(i);
			for(var j=0;j<ancho;j++)
			{
				var cel1 = row.insertCell(j);
				cel1.innerHTML = '<input type="text">';
			}
		}
	}
	
	function leer_matriz()
	{
		for (var i=0;i<ancho;i++)
		{
			for(var j=0;j<ancho;j++)
			{
				dato = table.rows[i].cells[j].innerHTML;
				datos_matriz.push(dato);
			}
		}
	}
	
	function escribir_matriz()
	{
		var tabla = "";
		for (var i=0;i<(cantidad_datos_matriz);i++){
			tabla+=datos_matriz[i]+"<br>";
		}
		document.getElementById("datos_ingresados").innerHTML = tabla;
	}
	</script>
	</head>
	<body>
	
	<input type="text" size="30" placeholder="Ingresar dato del arreglo" name="array_size" id="dato">
	
	<br>
	
	<button onclick="crear_matriz()">Crear</button>		
	
	<table id="Matriz">
	</table>
	
	<br>
	<table id="datos_ingresados">
	</table>
	
	<button onclick="dibujar_matriz()">Dibujar</button>
	
	<br>
	<button onclick="leer_matriz()">Calcular</button>
	
	<br>
	<button onclick="escribir_matriz()">Mostrar</button>
	
	
	</body>
</html>
